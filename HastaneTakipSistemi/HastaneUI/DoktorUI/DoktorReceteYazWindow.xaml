<mah:MetroWindow x:Class="HastaneTakipSistemi.HastaneUI.DoktorUI.DoktorReceteYazWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                 xmlns:controls="http://metro.mahapps.com/winf/xaml/controls"
                 xmlns:local="clr-namespace:HastaneTakipSistemi.HastaneUI"
                 mc:Ignorable="d"
                 Title="Reçete Yaz" 
                 Height="400" 
                 Width="400">
    <GroupBox Header="HASTA REÇETE GİRİŞİ"
              Margin="5">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0"
               Grid.Column="0"
               Content="Hasta T.C. Kimlik No"
               Margin="5"
               HorizontalAlignment="Right">
            </Label>
            <TextBox Name="tbxHastaTC"
                 Grid.Row="0"
                 Grid.Column="1"
                 Width="150"
                 Margin="5"
                 HorizontalAlignment="center">
            </TextBox>
            <Label Grid.Row="1"
               Grid.Column="0"
               Content="Tarih"
               Margin="5"
               HorizontalAlignment="Right">
            </Label>
            <DatePicker Name="dtpTarih"
                        Grid.Row="1"
                        Grid.Column="1"
                        Width="150"
                        Margin="5">
            </DatePicker>
            <Label Grid.Row="2"
               Grid.Column="0"
               Content="Reçete"
               Margin="5"
               HorizontalAlignment="Right">
            </Label>
            <TextBox Name="tbxRecete"
                 Grid.Row="2"
                 Grid.Column="1"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 Width="150"
                 Height="150"
                 Margin="5"
                 HorizontalAlignment="center"
                 VerticalAlignment="Top">
            </TextBox>
            <StackPanel Grid.Row="3"
                        VerticalAlignment="Bottom"
                        Margin="0,10"
                        Orientation="Horizontal"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Center">
                <Button Name="btnAnaMenu"
                        Grid.Row="2"
                        Margin="15"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Style="{StaticResource MahApps.Styles.Button}"
                        Content="Ana Menüye Dön"
                        Foreground="Brown"
                        BorderBrush="Brown"
                        Click="btnAnaMenu_Click">
                </Button>
                <Button Name="btnYaz"
                        Grid.Column="2"
                        HorizontalAlignment="Right"
                        Style="{StaticResource MahApps.Styles.Button}"
                        Content="YAZ"
                        Width="100"
                        Foreground="Blue"
                        BorderBrush="Blue"
                        Margin="15"
                        Click="btnYaz_Click">
                </Button>

            </StackPanel>
        </Grid>
    </GroupBox>

</mah:MetroWindow>
