<mah:MetroWindow x:Class="HastaneTakipSistemi.HastaneUI.HastaRandevuWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                 xmlns:controls="http://metro.mahapps.com/winf/xaml/controls"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 Title="HASTA RANDEVU PANELİ"
                 Width="900"
                 Height="700"
                 WindowStartupLocation="CenterScreen"
                 mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>


        <StackPanel     Grid.Row="0"
                        Grid.Column="0"                
                        Orientation="Vertical">

            <Grid VerticalAlignment="Stretch"
                      HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>

                <Label Content="TC Kimlik No"
                           Grid.Row="0"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalContentAlignment="Left"></Label>
                <TextBox     Name="tbxTCKNO"
                             Text="{Binding Path=hastaTC}"
                             Grid.Row="0"
                             Grid.Column="1"
                             Width="150"
                             Margin="3"></TextBox>
                <Label Content="Ad Soyad"
                           Grid.Row="1"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalContentAlignment="Left"></Label>
                <TextBox     Name="tbxAdSoyad"
                              Text="{Binding Path=hastaAdSoyad}"
                                 Grid.Row="1"
                                 Grid.Column="1"
                                 Margin="3">
                </TextBox>
                <Label Content="Doğum Yeri / Tarihi"
                           Grid.Row="2"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalContentAlignment="Left"></Label>
                <TextBox Name="tbxDGMYER"
                         Text="{Binding Path=hastaDogumYerTar}"
                             Grid.Row="2"
                             Grid.Column="1"
                             Width="150"
                             Margin="3"></TextBox>
                <Label Content="Cinsiyet"
                           Grid.Row="3"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalContentAlignment="Left"></Label>
                <TextBox Name="tbxCinsiyet"
                           Text="{Binding Path=hastaCinsiyet}"
                             Grid.Row="3"
                             Grid.Column="1"
                             Width="150"
                             Margin="3"></TextBox>
                <Label Content="Telefon No"
                           Grid.Row="4"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalContentAlignment="Left"></Label>
                <TextBox Name="tbxTelefon"
                           Text="{Binding Path=hastaTel}"
                             Grid.Row="4"
                             Grid.Column="1"
                             Width="150"
                             Margin="3"></TextBox>
                <Label Content="Oda No"
                           Grid.Row="5"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalContentAlignment="Left"></Label>
                <TextBox Name="tbxOdaNo"
                            Text="{Binding Path=hastaOda}"
                             Grid.Row="5"
                             Grid.Column="1"
                             Width="150"
                             Margin="3"></TextBox>
                <Label Content="Yatak No"
                           Grid.Row="6"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalContentAlignment="Left"></Label>
                <TextBox Name="tbxYatakNo"
                            Text="{Binding Path=hastaYatak}"
                             Grid.Row="6"
                             Grid.Column="1"
                             Width="150"
                             Margin="3"></TextBox>

            </Grid>
        </StackPanel>
        <StackPanel     Grid.Row="1"
                        Grid.Column="0"                
                        Orientation="Vertical"
                        VerticalAlignment="Center">
            <Grid     VerticalAlignment="Bottom"
                      HorizontalAlignment="Stretch">
                <Label Content="{Binding hastaKimlik}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Height="80"
                       Width="400"
                       FontSize="22"
                       FontStyle="Italic"
                       FontWeight="Bold"></Label>
            </Grid>
        </StackPanel>

        <StackPanel     Grid.Row="2"
                        Grid.Column="0"                
                        Orientation="Vertical"
                        VerticalAlignment="Center">
            <Grid     VerticalAlignment="Bottom"
                      HorizontalAlignment="Stretch">
                <Button
                    Name="btnRandevuGoster"
                    Content="Randevu Göster"
                    Width="110"
                    Height="100"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center" Click="btnRandevuGoster_Click"></Button>
                <Button
                    Name="btnBilgiGuncelle"
                    Content="Bilgileri Güncelle"
                    Width="110"
                    Height="100"
                    HorizontalAlignment="Center" RenderTransformOrigin="-0.309,0.49"
                     VerticalAlignment="Center" Click="btnBilgiGuncelle_Click"
                   />
                <Button
                    Name="btnCikis"
                    Content="Çıkış"
                    Width="110"
                    Height="100"
                    HorizontalAlignment="Right" Margin="240,0,0,0" RenderTransformOrigin="-0.209,0.467"
                     VerticalAlignment="Center" Click="btnCikis_Click"
                   ></Button>
            </Grid>

        </StackPanel>
        <StackPanel     Grid.Row="0"
                        Grid.Column="1"                
                        Orientation="Vertical"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center">

            <Grid VerticalAlignment="Stretch"
                      HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>

                </Grid.RowDefinitions>

                <Label Content="Klinik"
                           Grid.Row="0"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalContentAlignment="Left"></Label>
                <ComboBox  Name="cbxKlinik"
                             Grid.Row="0"
                             Grid.Column="1"
                             Width="150"
                             Margin="0,3,3,3"
                             DisplayMemberPath="Key"
                             SelectedValuePath="Value" HorizontalAlignment="Right">
                </ComboBox>
                <Label Content="Doktor"
                           Grid.Row="1"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalContentAlignment="Left"></Label>
                <ComboBox  Name="cbxDoktor"
                                 Grid.Row="1"
                                 Grid.Column="1"
                                 Margin="3"
                                 DisplayMemberPath="Key"
                                 SelectedValuePath="Value">
                </ComboBox  >
                <Label Content="Randevu Tarihi"
                           Grid.Row="2"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalContentAlignment="Left"></Label>
                <DatePicker Name="dtpRandevuTar"
                             Grid.Row="2"
                             Grid.Column="1"
                             Width="150"
                             Margin="3"></DatePicker >

            </Grid>
        </StackPanel>
        <StackPanel     Grid.Row="1"
                        Grid.Column="1"                
                        Orientation="Vertical"
                         VerticalAlignment="Stretch"
                         HorizontalAlignment="Stretch">
            <Grid VerticalAlignment="Stretch"
                      HorizontalAlignment="Stretch">

                <GroupBox Header="Randevu Saatleri"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch">
                    <Grid VerticalAlignment="Stretch"
                      HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="28*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>

                        </Grid.RowDefinitions>

                        <RadioButton Content="09.00"
                                         Name="rbtRandevu1"
                                         Grid.Row="0"
                                         Grid.Column="0"
                                         Margin="12,12,12,12">
                        </RadioButton>
                        <RadioButton Content="09.15"
                                         Name="rbtRandevu2"
                                         Grid.Row="0"
                                         Grid.Column="1"
                                         Margin="12,12,12,12">
                        </RadioButton>
                        <RadioButton Content="09.30"
                                         Name="rbtRandevu3"
                                         Grid.Row="0"
                                         Grid.Column="2"
                                         Margin="12,12,12,12">
                        </RadioButton>
                        <RadioButton Content="09.45"
                                         Name="rbtRandevu4"
                                         Grid.Row="0"
                                         Grid.Column="3"
                                         Margin="12,12,12,12">
                        </RadioButton>
                        <RadioButton Content="10.00"
                                         Name="rbtRandevu5"
                                         Grid.Row="0"
                                         Grid.Column="4"
                                         Margin="12,12,12,12">
                        </RadioButton>
                        <RadioButton Content="10.15"
                                     Name="rbtRandevu6"
                                     Grid.Row="1"
                                     Grid.Column="0"
                                     Margin="12,12,12,12">
                        </RadioButton>
                        <RadioButton Content="10.30"
                                     Name="rbtRandevu7"
                                     Grid.Row="1"
                                     Grid.Column="1"
                                     Margin="12,12,12,12">
                        </RadioButton>
                        <RadioButton Content="10.45"
                                     Name="rbtRandevu8"
                                     Grid.Row="1"
                                     Grid.Column="2"
                                     Margin="12,12,12,12">
                        </RadioButton>
                        <RadioButton Content="11.00"
                                     Name="rbtRandevu9"
                                     Grid.Row="1"
                                     Grid.Column="3"
                                     Margin="12,12,12,12">
                        </RadioButton>
                        <RadioButton Content="11.15"
                                     Name="rbtRandevu10"
                                     Grid.Row="1"
                                     Grid.Column="4"
                                     Margin="12,12,12,12">
                        </RadioButton>
                        <RadioButton Content="11.30"
                                         Name="rbtRandevu11"
                                         Grid.Row="2"
                                         Grid.Column="0"
                                         Margin="12,12,12,12">
                        </RadioButton>
                        <RadioButton Content="11.45"
                                         Name="rbtRandevu12"
                                         Grid.Row="2"
                                         Grid.Column="1"
                                         Margin="12,12,12,12">
                        </RadioButton>
                        <RadioButton Content="12.00"
                                         Name="rbtRandevu13"
                                         Grid.Row="2"
                                         Grid.Column="2"
                                         Margin="12,12,12,12">
                        </RadioButton>
                        <RadioButton Content="13.00"
                                         Name="rbtRandevu14"
                                         Grid.Row="2"
                                         Grid.Column="3"
                                         Margin="12,12,12,12">
                        </RadioButton>
                        <RadioButton Content="13.30"
                                         Name="rbtRandevu15"
                                         Grid.Row="2"
                                         Grid.Column="4"
                                         Margin="12,12,12,12">
                        </RadioButton>
                        <RadioButton Content="14.00"
                                     Name="rbtRandevu16"
                                     Grid.Row="3"
                                     Grid.Column="0"
                                     Margin="12,12,12,12">
                        </RadioButton>
                        <RadioButton Content="14.15"
                                     Name="rbtRandevu17"
                                     Grid.Row="3"
                                     Grid.Column="1"
                                     Margin="12,12,12,12">
                        </RadioButton>
                        <RadioButton Content="14.30"
                                     Name="rbtRandevu18"
                                     Grid.Row="3"
                                     Grid.Column="2"
                                     Margin="12,12,12,12">
                        </RadioButton>
                        <RadioButton Content="14.45"
                                     Name="rbtRandevu19"
                                     Grid.Row="3"
                                     Grid.Column="3"
                                     Margin="12,12,12,12">
                        </RadioButton>
                        <RadioButton Content="15.00"
                                     Name="rbtRandevu20"
                                     Grid.Row="3"
                                     Grid.Column="4"
                                     Margin="12,12,12,12">
                        </RadioButton>
                        <RadioButton Content="15.15"
                                     Name="rbtRandevu21"
                                     Grid.Row="4"
                                     Grid.Column="0"
                                     Margin="12,12,12,12">
                        </RadioButton>
                        <RadioButton Content="15.30"
                                     Name="rbtRandevu22"
                                     Grid.Row="4"
                                     Grid.Column="1"
                                     Margin="12,12,12,12">
                        </RadioButton>
                        <RadioButton Content="16.00"
                                     Name="rbtRandevu23"
                                     Grid.Row="4"
                                     Grid.Column="2"
                                     Margin="12,12,12,12">
                        </RadioButton>
                        <RadioButton Content="16.15"
                                     Name="rbtRandevu24"
                                     Grid.Row="4"
                                     Grid.Column="3"
                                     Margin="12,12,12,12">
                        </RadioButton>
                        <RadioButton Content="16.30"
                                     Name="rbtRandevu25"
                                     Grid.Row="4"
                                     Grid.Column="4"
                                     Margin="12,12,12,12">
                        </RadioButton>

                    </Grid>
                </GroupBox>


            </Grid>

        </StackPanel>
        <StackPanel Grid.Row="2"
                        Grid.Column="1"                
                        Orientation="Vertical"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="30">
            <Grid HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Label     Content="Seçilen Klinik"
                           Grid.Row="0"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalContentAlignment="Left"></Label>
                <TextBox     Name="tbxKlinik"
                             Text="{Binding cbxKlinik.SelectedValue}"
                              IsReadOnly="True"
                             Grid.Row="0"
                             Grid.Column="1"
                             Width="150"
                             Margin="3"></TextBox>
                <Label     Content="Seçilen Doktor"
                           Grid.Row="1"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalContentAlignment="Left"></Label>
                <TextBox     Name="tbxDoktor"
                             Text="{Binding DoktorList}"
                              IsReadOnly="True"
                             Grid.Row="1"
                             Grid.Column="1"
                             Width="150"
                             Margin="3"></TextBox>
                <Label     Content="Seçilen Tarih"
                           Grid.Row="2"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalContentAlignment="Left"></Label>
                <TextBox     Name="tbxTarih"
                             Grid.Row="2"
                              IsReadOnly="True"
                             Grid.Column="1"
                             Width="150"
                             Margin="3"></TextBox>
                <Label     Content="Seçilen Saat"
                           Grid.Row="3"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalContentAlignment="Left"></Label>
                <TextBox     Name="tbxSaat"
                             Grid.Row="3"
                             Grid.Column="1"
                              IsReadOnly="True"
                             Width="150"
                             Margin="3"></TextBox>

                <Button Name="btnOnayla"
                        Content="Onayla"
                        Grid.Column="1"
                        Grid.Row="4" Click="btnOnayla_Click"></Button>


            </Grid>
        </StackPanel>



    </Grid>
</mah:MetroWindow>
